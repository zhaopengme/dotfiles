#!/usr/bin/env bash

# macOS-specific bash profile.

# Optional: LM Studio CLI PATH (if installed under $HOME)
if [[ -d "$HOME/.cache/lm-studio/bin" ]]; then
  export PATH="$PATH:$HOME/.cache/lm-studio/bin"
fi
if [[ -d "$HOME/.lmstudio/bin" ]]; then
  export PATH="$PATH:$HOME/.lmstudio/bin"
fi

# If current shell is interactive and zsh exists, switch to zsh login shell.
if [[ -t 1 && "$SHELL" != *"zsh" ]] && command -v zsh >/dev/null 2>&1; then
  exec zsh -l
fi

# OrbStack integration (optional)
source "$HOME/.orbstack/shell/init.bash" 2>/dev/null || :

